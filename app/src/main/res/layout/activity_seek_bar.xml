<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seek_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tm.allfunctions.com.example.tm.allfunctions.widget.SeekBarActivity">

    <TextView
        android:text="@string/seek_bar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/textView10" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:max="255"
        android:thumbTint="@color/colorText"
        android:background="@color/colorRed"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/seekBar2" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/seekBar2"
        android:layout_alignEnd="@+id/seekBar2"
        android:layout_marginTop="10dp"
        android:thumbTint="@color/colorText"
        android:background="@color/colorGreen"
        android:max="255"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/seekBar3" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3"
        android:layout_marginTop="10dp"
        android:thumbTint="@color/colorText"
        android:background="@color/colorBlue"
        android:max="255"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/seekBar4" />

    <RelativeLayout
        android:layout_below="@+id/seekBar4"
        android:id="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

    </RelativeLayout>


</RelativeLayout>
